{% extends 'base.html.twig' %}
{% block title %}
	{{ actor.name }}
{% endblock %}

{% block body %}
	<div>
		<h2>{{ actor.name}}</h2>
		<div>
			<strong>{{ 'index.actors'|trans }}</strong>
			<ul>
				{% for program in actor.programs %}
					<li>
						<a href="{{ path("program_show", { slug: program.slug }) }}">{{ program.title }}</a>
					</li>
				{% else %}
					<li>{{ 'no.program.actor'|trans }}</li>
				{% endfor %}
			</ul>
		</div>
		<a href="{{ path('actor_index') }}">
			{{ 'return.actors'|trans }}
		</a>
	{% endblock %}

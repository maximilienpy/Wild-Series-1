{% extends 'base.html.twig' %}

{% block title %}Series{% endblock %}

{% block body %}
    <h1>Les séries par catégorie</h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} - Catégorie : {{ program.title }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('category_index') }}">
        Retour aux catégories
    </a>
{% endblock %}
{% extends 'base.html.twig' %}
{% block title %}Saison {{season.number}}{% endblock %}

{% block body %}
<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
        <h2>Saison {{ season.number }} de {{ program.title}}</h2>
        <p>{{ season.description }}</p>
        <h3>Liste des épisodes :</h3>
        {% for episode in episodes %}
        <p><a href="{{ path("program_episode_show", {'programId': program.id, 'seasonId': season.id, 'episodeId': episode.id}) }}"> Episode {{episode.number}} : {{episode.title}}</a></p>
        {% endfor %}
        <a href="{{ path("program_show", { slug: program.slug }) }}">
            Retour à la liste des saisons
        </a>
  </div>
 </div>


 {% endblock %}
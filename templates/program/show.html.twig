{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>{{ program.summary }}</p>
    <p>Catégorie : {{ program.category.name }}</p>
    <h2> Saisons : </h2>
    {% for season in seasons %}
    <p>{{season.number}} ({{season.year}})<p> <a class="btn" href="{{ path("program_season_show", {'programId': program.id, 'seasonId': season.id}) }}" role="button">voir les épisodes</a>
    {% endfor %}
    <div>
      <a href="{{ path('program_index') }}">
          Retour à la liste des séries
      </a>
    </div>
  </div>
</div>

{% endblock %}
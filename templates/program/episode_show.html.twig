{% extends 'base.html.twig' %}
{% block title %}Episode #{{ episode.number }}{% endblock %}

{% block body %}
<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
    <h2 class="mt-0">{{ program.title }} - Saison {{season.number}}</h2>
    <h3>Episode {{episode.number}} - {{episode.title}}</h3>
    <p>{{ episode.synopsis }}</p>
      <a href="{{ path("program_season_show", {'program': program.id, 'season': season.id}) }}">
          Retour à la liste des épisodes
      </a>
    </div>
  </div>
</div>

{% endblock %}